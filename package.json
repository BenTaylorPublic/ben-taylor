{
  "name": "bentaylor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "copyfiles": "^2.1.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "devDependencies": {},
  "scripts": {
    "build": "npm run build:lint && npm run build:tsc && npm run build:scss && npm run build:htmlcopy",
    "build:lint": "tslint --project tslint.json",
    "build:tsc": "tsc --build",
    "build:scss": "sass src/:docs/ --no-source-map",
    "build:htmlcopy": " copyfiles -a -u 1 \"./src/*.html\" \"./docs/\"",
    "dev": "sass --watch src/:src/ | tsc -w --outDir src/"
  }
}
