{
  "name": "bentaylor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "copyfiles": "^2.1.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "devDependencies": {},
  "scripts": {
    "build": "npm run -s build:lint && npm run -s build:clean && npm run -s build:tsc && npm run -s build:scss && npm run -s build:htmlcopy",
    "build:lint": "tslint --project tslint.json",
    "build:clean": "rm -r docs/*",
    "build:tsc": "tsc --build",
    "build:scss": "sass src/:docs/ --no-source-map",
    "build:htmlcopy": "copyfiles -a -u 1 \"./src/**/*.html\" \"./docs/\"",
    "dev": "sass --watch src/:src/ | tsc -w --outDir src/"
  }
}
