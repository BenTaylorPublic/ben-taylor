{
  "name": "bentaylor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "browserify": "^16.5.0",
    "copyfiles": "^2.1.1",
    "fs": "0.0.1-security",
    "grunt": "^1.0.4",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-run": "^0.8.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "build": "npm run -s build:lint && npm run -s build:preclean && npm run -s build:tsc && npm run -s build:bundle && npm run -s build:scss && npm run -s build:htmlcopy && npm run -s build:postclean",
    "build:lint": "tslint --project tslint.json",
    "build:preclean": "rm -r docs/*",
    "build:tsc": "tsc --build",
    "build:bundle": "node bundle-script.js prod",
    "build:scss": "sass src/:docs/ --no-source-map",
    "build:htmlcopy": "copyfiles -a -u 1 \"./src/**/*.html\" \"./docs/\"",
    "build:postclean": "rm -r tsc-dist/",

    "devbuild": "npm run -s devbuild:tsc && npm run -s devbuild:bundle && npm run -s devbuild:scss",
    "devbuild:tsc": "tsc --build",
    "devbuild:bundle": "node bundle-script.js dev",
    "devbuild:scss": "sass src/:src/ --no-source-map"
  }
}
