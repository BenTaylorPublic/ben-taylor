{
  "name": "bentaylor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "browserify": "^16.5.0",
    "copyfiles": "^2.1.1",
    "fs": "0.0.1-security",
    "grunt": "^1.0.4",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-run": "^0.8.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "build": "npm run -s build:lint && npm run -s build:clean && npm run -s build:tsc && npm run -s build:bundle && npm run -s build:scss && npm run -s build:htmlcopy",
    "build:lint": "tslint --project tslint.json",
    "build:clean": "rm -r docs/*",
    "build:tsc": "tsc --build",
    "build:bundle": "node bundle-script.js prod",
    "build:scss": "sass src/:docs/ --no-source-map",
    "build:htmlcopy": "copyfiles -a -u 1 \"./src/**/*.html\" \"./docs/\"",
    "dev": "sass --watch src/:src/ | tsc -w --outDir src/"
  }
}
